{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "@typescript-eslint"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier"
  ],
  "rules": {
    "no-console": "error",
    "@typescript-eslint/no-unused-vars": "off"
  },
  "ignorePatterns": [
    "node_modules/",
    "build/"
  ],
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  }
}